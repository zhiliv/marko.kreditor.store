<nav class="navbar navbar-expand-lg navbar-info bg-info">
  <button class="navbar-toggler" on-click("onOpenNav") aria-label="Меню">
    <span class="navbar-toggler-icon"/>

  </button>
  <img
    src=`/static/img/logo/logo.${input.typeImg}`
    class="navlogo"
    alt="logo"
    loading="lazy"/>
  <div class="collapse navbar-collapse">
    <ul class="nav">
      <for|item, ind| of=input.nav>
        <if(item.list.length)>
          <li class="nav-item dropdown">
            <if(ind == input.active)>
              <li
                class="nav-link dropdown-toggle active"
                data-toggle="dropdown"
                href="#"
                role="button"
                aria-haspopup="true"
                aria-expanded="false">
                ${item.parent}
              </li>

            </if>
            <else>
              <li
                class="nav-link "
                data-toggle="dropdown"
                href="#"
                role="button"
                aria-haspopup="true"
                aria-expanded="false">
                ${item.parent}
              </li>

            </else>
            <div class="dropdown-menu">
              <for|row, indList| of=item.list>
                <if(indList != 0)>
                  <li class="dropdown-item" href=`${row.route}`>${row.child}</li>

                </if>

              </for>

            </div>

          </li>

        </if>
        <else>
          <if(ind == input.active)>
            <navbar-button active="active" name=item.parent/>

          </if>
          <else>
            <navbar-button active="" name=item.parent/>

          </else>

        </else>

      </for>

    </ul>
    <div>
      <form style="float: right" class="form-inline">
        <input
          class="form-control"
          type="search"
          placeholder="Search"
          aria-label="Search"/>

      </form>

    </div>

  </div>

</nav>

